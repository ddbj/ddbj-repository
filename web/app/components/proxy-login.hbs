<div class="card">
  <div class="card-header">Proxy Login</div>

  <div class="card-body">
    <form {{on 'submit' this.submit}}>
      <div class="mb-3">
        {{#let (unique-id) as |id|}}
          <label for={{id}} class="form-label">
            User ID
          </label>

          <input type="text" value={{this.uid}} id={{id}} class="form-control" {{on 'change' this.setUid}} />
        {{/let}}
      </div>

      <button type="submit" class="btn btn-primary">Switch User</button>
    </form>
  </div>
</div>