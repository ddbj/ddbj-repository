{
  "tasks": {
    "run": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run run.ts",
    "install": "deno install --allow-read --allow-write --allow-env --allow-net --allow-run --config=deno.json --name ddbj-repository --force run.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --allow-run tests/*_test.ts"
  },
  "imports": {
    "cliffy/": "https://deno.land/x/cliffy@v1.0.0-rc.4/",
    "json_colorize/": "https://deno.land/x/json_colorize@0.1.0/",
    "std/": "https://deno.land/std@0.224.0/"
  },
  "fmt": {
    "lineWidth": 200,
    "singleQuote": true
  }
}
